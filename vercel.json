{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/firebase-messaging-sw.js",
      "dest": "/firebase-messaging-sw.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/index.html"
    },
    {
      "src": "/((?!firebase-messaging-sw\\.js).*)",
      "status": 301,
      "headers": { "Location": "/admin" }
    }
  ]
}